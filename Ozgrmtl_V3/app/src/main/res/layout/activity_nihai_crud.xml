<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:backgroundTint="@null"
    android:background="@drawable/spesific_background"
    tools:context=".activitiys.nihai_crud_activity">

    <LinearLayout
        android:id="@+id/linearLayout9"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:enabled="false"
            android:gravity="center_horizontal|center_vertical"
            android:text="KAYIT SİL/GÜNCELLE MENÜSÜ"
            android:textColor="#13005A"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout9">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:enabled="false"
            android:text="SİL PENCERESİ"
            android:textColor="#13005A" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:enabled="false"
            android:text="Silmek istediğiniz veriyi seçiniz"
            android:textColor="#13005A" />

        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:enabled="false"
                android:text="Silmek istediğiniz verinin ID'sini seçiniz"
                android:textColor="#13005A" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/nihai_crud_sil_silspin_olcu"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1" />
        </LinearLayout>

        <Button
            android:id="@+id/nihai_crud_sil_silbut"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/delete"
            app:backgroundTint="@null" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:enabled="false"
            android:text="GÜNCELLE PENCERESİ"
            android:textColor="#13005A" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:enabled="false"
            android:text="Güncellemek istediğiniz veriyi seçiniz"
            android:textColor="#13005A" />

        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:enabled="false"
                android:text="Güncellemek istediğiniz verinin ID'sini seçiniz"
                android:textColor="#13005A" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/nihai_crud_guncel_guncelspin_olcu"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1" />
        </LinearLayout>

        <EditText
            android:id="@+id/nihai_crud_nihai_maliyet"
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:ems="10"
            android:enabled="false"
            android:hint="Ürün eski maliyeti"
            android:inputType="textPersonName"
            android:textColor="#13005A" />

        <EditText
            android:id="@+id/nihai_crud_guncel_maliyet"
            android:layout_width="360sp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Güncel maliyeti giriniz"
            android:inputType="numberDecimal"
            android:textColor="#13005A" />

        <Button
            android:id="@+id/nihai_crud_guncel_guncelbut"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/update"
            app:backgroundTint="@null" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>